<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/loginbg"
    >
    <RelativeLayout
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_user"/>
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_logo"
            android:id="@+id/imageView2" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/iv_pic"
        android:id="@+id/ll_name"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg">

        <EditText
            android:id="@+id/et_name"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@color/transparent"
            android:textSize="18sp"
            android:singleLine="true"
            android:hint="username"/>
        <ImageView
            android:id="@+id/iv_scan"
            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/scan"/>
    </RelativeLayout>
    <ImageView
        android:layout_below="@id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white"/>
    <LinearLayout
        android:id="@+id/ll_pwd"
        android:layout_below="@+id/ll_name"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg">

        <EditText
            android:id="@+id/et_pwd"
            android:background="@color/transparent"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="password"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_get_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Retrieve password"
        android:padding="10dp"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:text="User registration"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_marginTop="46dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/reg_bg"
        android:text="login"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_below="@+id/ll_pwd"
        android:layout_alignLeft="@+id/tv_get_pwd"
        android:layout_alignStart="@+id/tv_get_pwd" />

    <Button
        android:id="@+id/bt_sms"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/reg_bg"
        android:text="Verification code login"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_alignLeft="@+id/tv_get_pwd"
        android:layout_alignStart="@+id/tv_get_pwd"
        android:layout_below="@+id/btn_login"
        />

</RelativeLayout>
